{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "edge",
      "request": "launch",
      "version": "canary",
      "name": "Launch Microsoft Edge (Chromium) against localhost",
      "url": "localhost:3000",
      "port": 2015,
      "webRoot": "${workspaceFolder}",
      "windows": {
        "program": "{$env:APPDATA}/Local/Microsoft/Edge SxS/Application/msedge.exe"
      }
    },
    {
      "type": "edge",
      "request": "attach",
      "name": "Attach Microsoft Edge (Chromium) against localhost",
      "url": "localhost:3000",
      "port": 2015,
      "webRoot": "${workspaceFolder}",
      "windows": {
        "program": "{$env:APPDATA}/Local/Microsoft/Edge SxS/Application/msedge.exe"
      }
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox Developer Edition against localhost",
      "url": "localhost:3000",
      "windows": {
        "firefoxExecutable": "C:\\Program Files\\Firefox Developer Edition\\firefox.exe"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome Dev against localhost",
      "port": 9222,
      "url": "localhost:3000",
      "webRoot": "${workspaceFolder}",
      "windows": {
        "program": "C:\\Program Files (x86)\\Google\\Chrome Dev\\Application\\chrome.exe"
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome Dev against localhost",
      "port": 9222,
      "url": "localhost:3000",
      "webRoot": "${workspaceFolder}",
      "windows": {
        "program": "C:\\Program Files (x86)\\Google\\Chrome Dev\\Application\\chrome.exe"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome against localhost",
      "port": 9222,
      "url": "localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
