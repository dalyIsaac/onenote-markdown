{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome against localhost",
      "port": 9222,
      "url": "localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch to Chrome Dev against localhost on Windows",
      "program": "C:\\Program Files (x86)\\Google\\Chrome Dev\\Application\\chrome.exe",
      "port": 9222,
      "url": "localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome Dev against localhost on Windows",
      "program": "C:\\Program Files (x86)\\Google\\Chrome Dev\\Application\\chrome.exe",
      "port": 9222,
      "url": "localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
